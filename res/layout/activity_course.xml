<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/activity_course_title_layout"
        android:layout_height="45dp"
        android:layout_width="fill_parent"
        android:background="@color/main_color"
        android:gravity="center_vertical"
        >
        <ImageButton 
            android:id="@+id/activity_course_title_back"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/title_btn_back"
            android:onClick="backButton"
            android:src="@drawable/title_back_white"/>
        <TextView 
            android:id="@+id/activity_course_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            /> 
    </RelativeLayout>
    <ExpandableListView 
        android:id="@+id/activity_course_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:groupIndicator="@null"
        android:drawSelectorOnTop="false"
        android:cacheColorHint="@color/white_color"
        android:divider="@color/black_text"
        android:dividerHeight="2dp"
        >
        </ExpandableListView>
</LinearLayout>
